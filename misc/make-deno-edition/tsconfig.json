  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "maxNodeModuleJsDepth": 5,
    "moduleResolution": "Node",
    "strict": true,
    "target": "ESNext",
    "lib": ["es2020.string", "ESNext"],
    "module": "ESNext"
  },
  "include": ["source"]
}
